// Place your settings in this file to overwrite default and user settings.
{
        "editor.fontSize": 14,
        "editor.tabSize": 3,
        "editor.wrappingColumn": 0,
        "files.exclude": {
                "**/.git": true,
                "**/.svn": true,
                "**/.hg": true,
                "**/.DS_Store": true,
                "**/*.js": {
                        "when": "$(basename).ts"
                },
                "**/*.map": true,
                "typings": true
        }
,
"typescript.tsdk": "./node_modules/typescript/lib"
}